{
	"private": true,
	"main": "build/index.js",
	"scripts": {
		"build": "tsc -p tsconfig.prod.json",
		"debug": "nodemon -r dotenv/config src/index.ts",
		"format": "eslint ./src --fix",
		"lint": "eslint ./src",
		"start": "node build/index.js",
		"test": "NODE_ENV=test jest --runInBand",
		"test:integration": "firebase emulators:exec \"NODE_ENV=test jest --runInBand --group=integration\"",
		"test:unit": "NODE_ENV=test jest --runInBand --group=unit"
	},
	"dependencies": {
		"@bufbuild/connect": "^0.13.0",
		"@bufbuild/connect-node": "^0.13.0",
		"@bufbuild/protobuf": "^1.7.2",
		"firebase-admin": "^12.0.0"
	},
	"devDependencies": {
		"@tsconfig/node-lts": "^20.1.1",
		"@tsconfig/strictest": "^2.0.2",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.16",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.20.0",
		"dotenv": "^16.4.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^27.6.3",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"jest-node-exports-resolver": "^1.1.6",
		"jest-runner-groups": "^2.2.0",
		"nodemon": "^3.0.3",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18"
	}
}
